#!/usr/bin/env node

var resolve = require('resolve').sync,
    path = require('path');

var basedir = process.cwd();

var variants = [{
    module: 'bem/lib/coa',
    method: 'run'
}, {
    module: 'bem/lib/bem',
    method: 'main'
}, {
   module: path.resolve(__dirname, '../lib/error'),
   method: 'error'
}];

variants.some(function (variant) {
    var path;

    // try to find command
    try {
        path = resolve(variant.module, {
            basedir: basedir
        });
    } catch (e) {
        return false;
    }

    // execute command
    require(path)[variant.method]();
    return true;
});
