.fieldset {
    border:  $fieldset_border_width solid $base_bkg;
    padding: $fieldset_padding;
    margin:  $fieldset_margin;

    .fieldset__legend {
        font-weight: $legend_font_weight;
        font-size:   $legend_font_size;
        padding:     $legend_padding;
        color:       $legend_font_color;
    }
}
